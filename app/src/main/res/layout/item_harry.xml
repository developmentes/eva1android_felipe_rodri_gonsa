<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_card"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginTop="16dp"
    android:layout_marginHorizontal="16dp"
    android:background="#255165"
    >

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:src="@drawable/harry_img"
        android:layout_marginRight="8dp"
        />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harry Potter"
        android:layout_toRightOf="@id/item_img"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#ffff"
        />
    <TextView
        android:id="@+id/item_especie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humano"
        android:layout_below="@id/item_name"
        android:layout_toRightOf="@id/item_img"
        android:textColor="#ffff"
        />

    <TextView
        android:id="@+id/item_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_especie"
        android:layout_toRightOf="@id/item_img"
        android:text="Male"
        android:textColor="#ffff"
        />
    <TextView
        android:id="@+id/item_house"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gryffindor"
        android:layout_toRightOf="@id/item_img"
        android:layout_below="@id/item_gender"
        android:textColor="#ffff"
        />
    <TextView
        android:id="@+id/item_DateOfBird"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="31-07-1980"
        android:layout_below="@id/item_house"
        android:layout_toRightOf="@id/item_img"
        android:textColor="#ffff"
        />

    <TextView
        android:id="@+id/item_yearsOfBird"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_DateOfBird"
        android:layout_toRightOf="@id/item_img"
        android:text="1980"
        android:textColor="#ffff"
        />
    <TextView
        android:id="@+id/item_wood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wood"
        android:layout_toRightOf="@id/item_img"
        android:layout_below="@id/item_yearsOfBird"

        android:textColor="#ffff"
        />
    <TextView
        android:id="@+id/item_core"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="core"
        android:layout_below="@id/item_wood"
        android:layout_toRightOf="@id/item_img"
        android:textColor="#ffff"
        />

</RelativeLayout>
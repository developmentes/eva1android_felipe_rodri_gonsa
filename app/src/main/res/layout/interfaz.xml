<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/card"
    tools:context=".MainActivity">

<ImageView
    android:id="@+id/img_fondo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/background_harry1"
    android:scaleType="centerCrop"/>
<Button
    android:id="@+id/creadores"
    android:layout_width="100dp"
    android:layout_height="60dp"
    android:text="Creadores"
    android:textSize="15dp"
    android:background="#4DF3ECE2"
    android:textColor="#433E3E"
    android:fontFamily="@font/harry_potter"
    android:layout_centerHorizontal="true"
    android:onClick="acercade"
    />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:background="@drawable/fondo_login"
        android:layout_marginHorizontal="16dp">

        <include layout="@layout/foto_interfaz"/>
        <include layout="@layout/login"/>


</RelativeLayout>